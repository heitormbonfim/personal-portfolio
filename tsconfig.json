{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "rootDir": "ts-server",
    "outDir": ".",
    "removeComments": true
  },
  "include": ["ts-server/**/*.ts"],
  "exclude": ["node_modules", "ts-client"]
}
