{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "rootDir": "ts-server",
    "outDir": "./dist",
    "removeComments": true
  },
  "include": ["ts-server/**/*.ts"],
  "exclude": ["node_modules", "ts-client", "public", "dist"]
}
